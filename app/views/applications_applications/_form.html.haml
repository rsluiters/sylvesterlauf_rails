= form_for([@application_event,@applications_application]) do |f|
  - if @applications_application.errors.any?
    #error_explanation
      %h2
        = pluralize(@applications_application.errors.count, "error")
        prohibited this applications_application from being saved:
      %ul
        - @applications_application.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name, "Name"
    %br/
    = f.text_field :name
  .field
    = f.label :birth_year, "Jahrgang"
    %br/
    = f.number_field :birth_year
  .field
    = f.label :course, "Strecke"
    %br/
    = f.text_field :course
  .field
    = f.label :comment, "Kommentar"
    %br/
    = f.text_area :comment
  .actions
    = f.submit