= simple_form_for(@applications_event, :html => {:class => 'form-horizontal' }) do |f|
  - if @applications_event.errors.any?
    #error_explanation
      %h2
        = @applications_event.errors.count
        Fehler verhinderten das Speichern des Formulars:
      %ul
        - @applications_event.errors.full_messages.each do |msg|
          %li= msg
  = f.input :name, label: "Name:"
  = f.input :deadline_internal,as: :date, label: "Anmeldefrist(intern):", order: [:day, :month, :year]
  = f.input :url, as: :url, label: "Event URL:"
  = f.input :announcement_url, as: :url, label: "Ausschreibung URL:"
  = f.input :comment, as: :text, label: "Kommentar:"
  = f.button :submit, "Veranstaltung erstellen", class: 'btn btn-primary'