= form_for(@applications_event) do |f|
  - if @applications_event.errors.any?
    #error_explanation
      %h2
        = pluralize(@applications_event.errors.count, "error")
        prohibited this applications_event from being saved:
      %ul
        - @applications_event.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :deadline_internal
    %br/
    = f.date_select :deadline_internal
  .field
    = f.label :url
    %br/
    = f.text_field :url
  .field
    = f.label :announcement_url
    %br/
    = f.text_field :announcement_url
  .field
    = f.label :comment
    %br/
    = f.text_area :comment
  .actions
    = f.submit class:"btn btn-primary"